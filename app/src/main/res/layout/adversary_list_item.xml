<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/adversary_list_item"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:padding="@dimen/default_margin"
	>

	<TextView
		android:id="@+id/adversary_list_item_name"
		android:gravity="center"
		android:layout_alignParentStart="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		/>

	<Button
		android:id="@+id/adversary_list_item_button_delete"
		android:background="@drawable/button"
		android:layout_alignParentEnd="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/config_button_delete"
		android:textSize="14sp"
		style="@style/ButtonTextConfig"
		/>

	<TextView
		android:id="@+id/adversary_list_item_type"
		android:gravity="center"
		android:layout_toLeftOf="@id/adversary_list_item_button_delete"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		/>
</RelativeLayout>